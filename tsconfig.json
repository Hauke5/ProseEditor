{
   "compilerOptions": {
      "lib": ["dom", "dom.iterable", "esnext"],
      "target": "esnext",
      "allowJs": true,
      "skipLibCheck": true,
      "downlevelIteration": true,
      "strict": false,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "strictNullChecks": true,
      "plugins": [
         {
         "name": "next"
         }
      ],
      "baseUrl": ".",
      "paths": {
         "@/app/*":         ["./example/app/*"],
         "@/lib/*":         ["./lib/*", "./node_modules/@hauke5/dialog/lib/*", "./node_modules/@hauke5/nextjs-utils/lib/*", "./node_modules/@hauke5/utils/lib/*"],
      }
   },
   "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
   "exclude": ["node_modules"]
}
